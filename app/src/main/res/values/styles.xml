<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="fontFamily">@font/montserrat_light</item>
    </style>

    <style name="ButtonText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="WhiteText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BlackText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Login Screen-->
    <style name="LoginScreenText" parent="AppTheme">
        <item name="android:textSize">@dimen/WelcomeTextSize</item>
        <item name="android:textColor">@color/DarkBlue</item>
    </style>

    <!--OTP screen-->
    <style name="OTPscreenText" parent="AppTheme">
        <item name="android:textSize">@dimen/OTPWelcomeTextSize</item>
        <item name="android:textColor">@color/DarkBlue</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_rate</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">

    </style>

    <!--Navigation Drawer-->
    <style name="NavigationDrawer" parent="AppTheme">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!--Bottom Bar-->
    <style name="BottomBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:hideOnContentScroll" tools:targetApi="lollipop">true</item>
        <item name="fabCradleMargin">0dp</item>
        <item name="fabCradleVerticalOffset">2dp</item>
        <item name="buttonGravity">top</item>
    </style>
    
    <!--Bottom Sheet-->

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_corner_bottom_sheet</item>
        <item name="behavior_peekHeight">700dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomsheetDialogTheme" parent="BaseBottomSheetDialog"/>

    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/Black</item>
        <item name="checkedIcon">@drawable/ic_checked</item>
        <item name="chipSurfaceColor">@color/light_grey</item>
        <item name="checkedIconVisible">true</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="BottomText" parent="WhiteText">
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/bottom_padding</item>
    </style>
    <style name="bottom_payment_option_text">
        <item name="android:textSize">@dimen/bottom_payment_opt_text</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
